{
  "name": "b4x-vscode",
  "displayName": "B4X",
  "description": "B4X Language Support",
  "version": "0.1.3",
  "publisher": "Jansen",
  "repository": {
    "type": "git",
    "url": "https://github.com/Jansen611/b4x-language-support.git"
  },
  "icon": "assets/Logo.png",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "b4x",
    "B4X"
  ],
  "contributes": {
    "languages": [
      {
        "id": "b4x",
        "aliases": [
          "B4X",
          "b4x"
        ],
        "extensions": [
          ".bas"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "b4x",
        "scopeName": "source.b4x",
        "path": "./syntaxes/b4x.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "b4x",
        "path": "./snippets/snippets.code-snippets"
      }
    ]
  },
  "main": "out/extension.js",
  "activationEvents": [
    "onLanguage:b4x"
  ],
  "scripts": {
    "sync-version": "ts-node scripts/sync-version.ts",
    "clean": "rm -rf out",
    "prepare": "npm run clean && npm run sync-version",
    "vscode:prepublish": "npm run prepare && npm run compile",
    "compile": "tsc -p tsconfig.json",
    "watch": "",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.5",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}
