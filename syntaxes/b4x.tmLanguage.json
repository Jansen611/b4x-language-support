{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "B4X",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "source.asp.vb.net"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.b4x",
				"match": "(?i)\\b(if|then|else|elseif|end if|while|loop|for|to|return)\\b"
			},
			{
				"name": "keyword.operator.b4x",
				"match": "(?i)\\b(Mod|And|Not|Or|Xor|as|Is|Eqv)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.b4x",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.b4x",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.b4x"
}